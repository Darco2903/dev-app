{
    "$schema": "https://schema.tauri.app/config/2.0.0-rc",
    "productName": "dev-app",
    "version": "0.1.0",
    "identifier": "fr.darco2903.dev-app",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:10100",
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build"
    },
    "app": {
        "windows": [
            {
                "title": "dev-app",
                "width": 450,
                "height": 550,
                "minWidth": 450,
                "maxWidth": 450,
                "minHeight": 550,
                "maxHeight": 550,
                "resizable": false,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
