{
    "$schema": "https://schema.tauri.app/config/2.0.0-rc",
    "productName": "Dev App",
    "version": "0.5.2",
    "identifier": "fr.darco2903.dev-app",
    "mainBinaryName": "dev-app",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:10100",
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build"
    },
    "app": {
        "windows": [
            {
                "title": "Dev App - v5.2",
                "width": 450,
                "height": 550,
                "minWidth": 450,
                "maxWidth": 450,
                "minHeight": 550,
                "maxHeight": 550,
                "resizable": false,
                "maximizable": false,
                "maximized": false,
                "minimizable": true,
                "fullscreen": false,
                "visible": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["nsis"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "allowDowngrades": false,
            "nsis": {
                "installerIcon": "./icons/icon.ico",
                "installMode": "perMachine",
                "displayLanguageSelector": false,
                "languages": ["English", "French"]
            }
        }
    }
}
